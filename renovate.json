{
  "extends": [
    "config:base"
  ],

  "dependencies": {
    "updateTypes": ["minor", "patch"],
    "automerge": true
  },
  "devDependencies": {
    "updateTypes": ["minor", "patch"],
    "automerge": true
  },

  "digest": {
    "enabled": false
  },

  "labels": [
    "renovate"
  ],

  "packageRules": [
      {
        "matchManagers": ["npm"],
        "enabled": false
      }
    ],

  "pip_requirements": {
    "fileMatch": ["^requirements/fork.txt$"]
  }
}
